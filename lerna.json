{
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": [
    "packages/*"
  ],
  "command": {
    "version": {
      "exact": true
    },
    "publish": {
      "message": "chore(release): publish %s",
      "npmClient": "npm",
      "allowBranch": [
        "master"
      ],
      "registry": "https://registry.npmjs.org/"
    }
  },
  "version": "1.0.0"
}
